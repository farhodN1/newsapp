<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:contentDescription="no" />

        <!-- Button at the top-right corner -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_favorite_24"
            app:tint="#D81717"
            android:layout_margin="15dp" />

        <!-- TextView at the bottom-left corner -->
        <TextView
            android:id="@+id/news_published_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="18dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:text="Published Date" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/vertical_line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="0dp"

            android:background="#FFA500" />

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_image"
            android:layout_marginTop="0dp"
            android:text="what the fuck is happing"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_container"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/news_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="This is the description of the news. It can be very long and should be scrollable to accommodate all the text content." />
    </ScrollView>
</RelativeLayout>
